#!/bin/bash

COMMITFORMAT="(Add|Remove|Fix|Modify|Improve|Simplify|Refactor|Merge|Move)"
default_pattern="^(\($COMMITFORMAT\) )?(Add|Remove|Fix|Modify|Improve|Simplify|Refactor|Merge|Move)"


if [[ ! $message =~ $default_pattern ]]; then
echo $default_pattern
  echo '🚨 Git 컨벤션을 준수해주세요! 👮'
  echo ''
  echo '🏃      🚓💨💨'
  osascript -e 'display notification "🚨 Git 컨벤션을 준수해주세요! 👮" with title "컨벤션 경고"'
  exit 1
fi

exit 0